  <statements>
    <select id="select_byMRSheaderId"  resultMap="MRSdetailsAndProductFPSLsumResult" parameterClass="string">
      <![CDATA[
      SELECT MRSdetailsId,ProductId,MRSHeaderId,MRSdetailssum,MRSdetailsdes,ProductUnit,MRSdetailsQuantity,MadeProductId, Inumber,JiaoHuoDate,ArrangeDesc,BeforePackageProductId,SupplierId,WorkHouseNextId,MaterialDesc,(select ProductName+'{'+CustomerProductName+'}' from product p where p.productid=MRSdetails.MadeProductId) as MadeProductName FROM MRSdetails WHERE MRSHeaderId=#value# order by Inumber
      ]]>
    </select>

